@using Nest1.ViewModels.Authorzation

@model RegistrVM
@{
    ViewData["Title"] = "Registr";
}


<div class="page-content pt-100">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-10 col-md-12 m-auto">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="login_wrap widget-taber-content background-white">
                            <div class="padding_eight_all bg-white">
                                <div class="heading_s1">
                                    <h1 class="mb-5">Create an account</h1>
                                    <p class="mb-30">Do you already have an account?<a href="page-login.html">Enter</a></p>
                                </div>
                                <form method="post">
                                    <div class="form-group row">
                                        <div class="col">
                                            <input asp-for="Firstname" class="form-control" placeholder="Your name">
                                            <span asp-validation-for="Firstname"></span>
                                        </div>
                                        <div class="col">
                                            <input asp-for="Lastname" class="form-control" placeholder="Your surname">
                                            <span asp-validation-for="Lastname"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Username" class="form-control" placeholder="Your username">
                                        <span asp-validation-for="Username"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Email" class="form-control" placeholder="Your email address">
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Password" class="form-control" placeholder="Your password">
                                        <span asp-validation-for="Password"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-enter your password for security reasons">
                                        <span asp-validation-for="ConfirmPassword"></span>
                                    </div>
                                    <button type="submit" class="btn btn-fill-out btn-block hover-up font-weight-bold" name="login">Registration</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

